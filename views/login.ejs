<% include partials/header %>
<h1>Faça o Login</h1>

<div class=row>
    <div class="container">
        <form action="/login" method="POST">
            <div class="form-group">
                <input type="text" placeholder="Digite seu nome de usuário" name="username">
            </div>
            <div class="form-group">
                <input type="password" placeholder="Digite aqui sua senha" name="password">
            </div>
            <div class="container">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Entrar!</button>
                </div>
            </div>
        </form>
    </div>
</div>

